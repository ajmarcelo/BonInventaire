<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8EF">

    <TextView
        android:id="@+id/tv_add_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/great_vibes"
        android:text="Add Item"
        android:textColor="@color/black"
        android:textSize="65sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rl_add_item_name"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_add_item_title"
        app:layout_constraintStart_toStartOf="@+id/tv_add_item_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_item_title">

        <LinearLayout
            android:id="@+id/ll_add_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_purple"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_add_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/belleza"
                android:hint="Name"
                android:maxLength="25"
                android:outlineProvider="none"
                android:paddingBottom="0dp"
                android:textColor="#3A3A3A"
                android:textColorHighlight="#8993B9"
                android:textColorLink="#8993B9"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:background="#FFF8EF"
            android:fontFamily="@font/belleza"
            android:text=" Name "
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add_item_list"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="@+id/rl_add_item_name"
        app:layout_constraintStart_toStartOf="@+id/rl_add_item_name"
        app:layout_constraintTop_toBottomOf="@+id/rl_add_item_name">

        <LinearLayout
            android:id="@+id/ll_add_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_purple"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_add_item_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/belleza"
                android:hint="List"
                android:maxLength="25"
                android:outlineProvider="none"
                android:paddingBottom="0dp"
                android:textColor="#3A3A3A"
                android:textColorHighlight="#8993B9"
                android:textColorLink="#8993B9"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:background="#FFF8EF"
            android:fontFamily="@font/belleza"
            android:text=" List "
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add_item_expire_date"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toStartOf="@+id/rl_add_item_num_stocks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_add_item_list">

        <LinearLayout
            android:id="@+id/ll_add_item_expire_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_purple"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_add_item_expire_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/belleza"
                android:hint="Select Date"
                android:inputType="date"
                android:outlineProvider="none"
                android:paddingBottom="0dp"
                android:textColor="#3A3A3A"
                android:textColorHighlight="#8993B9"
                android:textColorLink="#8993B9"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_item_expire_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:background="#FFF8EF"
            android:fontFamily="@font/belleza"
            android:text=" Expiration Date "
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add_item_num_stocks"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rl_add_item_expire_date"
        app:layout_constraintTop_toBottomOf="@+id/rl_add_item_list">

        <LinearLayout
            android:id="@+id/ll_add_item_num_stocks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_purple"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_add_item_num_stocks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/belleza"
                android:hint="#"
                android:inputType="number"
                android:outlineProvider="none"
                android:paddingBottom="0dp"
                android:textColor="#3A3A3A"
                android:textColorHighlight="#8993B9"
                android:textColorLink="#8993B9"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_item_num_stocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:background="#FFF8EF"
            android:fontFamily="@font/belleza"
            android:text=" No. of Stocks "
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add_item_note"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="@+id/rl_add_item_name"
        app:layout_constraintStart_toStartOf="@+id/rl_add_item_name"
        app:layout_constraintTop_toBottomOf="@+id/rl_add_item_num_stocks">

        <LinearLayout
            android:id="@+id/ll_add_item_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_purple"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_add_item_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/belleza"
                android:hint="Note"
                android:maxLength="150"
                android:outlineProvider="none"
                android:paddingBottom="0dp"
                android:textColor="#3A3A3A"
                android:textColorHighlight="#8993B9"
                android:textColorLink="#8993B9"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_item_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:background="#FFF8EF"
            android:fontFamily="@font/belleza"
            android:text=" Note "
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/ib_add_item_save"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#00FFFFFF"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/rl_add_item_note"
        app:layout_constraintStart_toStartOf="@+id/rl_add_item_note"
        app:layout_constraintTop_toBottomOf="@+id/rl_add_item_note"
        app:srcCompat="@drawable/save_btn" />

    <ImageButton
        android:id="@+id/ib_add_item_cancel"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#00FFFFFF"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/rl_add_item_note"
        app:layout_constraintStart_toStartOf="@+id/rl_add_item_note"
        app:layout_constraintTop_toBottomOf="@+id/ib_add_item_save"
        app:srcCompat="@drawable/cancel_btn" />

    <ProgressBar
        android:id="@+id/pb_add_item"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="#EDAE49"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>